<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@mipmap/pic_store_head_bj">

    <ImageView
        android:id="@+id/child2_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="18dp"
        android:src="@mipmap/ic_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/child2_name"
        style="@style/text16"
        android:layout_marginStart="12dp"
        android:text="商家名称"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/child2_time"
        app:layout_constraintStart_toEndOf="@+id/child2_img"
        app:layout_constraintTop_toTopOf="@+id/child2_img"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/child2_time"
        style="@style/text14"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:text="2019-12-24 14:32:36 到期"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/child2_img"
        app:layout_constraintEnd_toStartOf="@+id/child2_info"
        app:layout_constraintStart_toStartOf="@+id/child2_name"
        app:layout_constraintTop_toBottomOf="@+id/child2_name" />

    <TextView
        android:id="@+id/child2_info"
        style="@style/text14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/left_round_bg"
        android:gravity="center"
        android:minWidth="80dp"
        android:minHeight="42dp"
        android:text="未认证"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/child2_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/child2_img" />
</androidx.constraintlayout.widget.ConstraintLayout>